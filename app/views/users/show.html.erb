            <% end %>
            <h6>Montant: en attente de Dimitri YOULA<%=  %></h6>
          </div>
          <%= link_to "Supprimer la commande", nil, class: "btn btn-danger", data: {confirm: "Es-tu sur?", method: "delete"} %>
