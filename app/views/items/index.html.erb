<h1>Items#index</h1>
<p>
  <% @items.each do |item| %>
    <div class="card-deck">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= item.title %></h5>
          <p class="card-text"><%= item.price.round(2) %> EUR</p>
          <p><%= link_to "Voir le produit", item_path(item.id), class: "btn btn-primary"%></p>
        </div>
        
      </div>
    </div>
  <% end %>
</p>
